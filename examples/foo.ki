def[T] getsize = fn() u32 {
  return sizeof@[T];
};

defclass kla struct {
  x u32;
  y u32;
};

access kla {
  def do_destroy = fn(p *kla) void {
    p->x = 0u;
    p->y = 0u;
  };
  def do_init = fn(p *kla) void {
    p->x = 37u;
    p->y = 47u;
  };

  def do_copy = fn(a *kla, c *kla) void {
    a->x = c->x;
    a->y = c->y;
  };

  def expose = fn (p *kla) struct { x u32; y u32; } {
    return p->~;
  };
}

def call_kla = fn(x kla) void {
  print(expose(&x).x);
  putchar(32);
  print(expose(&x).y);
  putchar(10);
};

def try_kla = fn() void {
  var k kla;
  var l struct { x u32; y u32; } = expose(&k);
  print(l.x);
  putchar(32);
  print(l.y);
  putchar(10);
  call_kla(k);
};

