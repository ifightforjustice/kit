import stdlib;
import array;

func read_file(path array[u8]) opt[array[u8]] {
  push(&path, '\0');
  rb0 array[u8] = make("rb\0");
  fp *FILE = fopen(data(&path), data(&rb0));
  if fp == null {
    return None();
  }

  dat array[u8];
  buf array[u8] = repeat(16384, @[u8] 0);
  done bool = false;
  while !done {
    nread size = fread(@[*void]cast(data(&buf)), 1, count(&buf), fp);
    check(nread <= count(&buf));
    append_raw(&dat, data(&buf), nread);
    if nread < count(&buf) {
      if 0 != feof(fp) {
        done = true;
      } else {
        fclose(fp);
        return None();
      }
    }
  }

  fclose(fp);
  return Has(dat);
}

func write_file(path array[u8],
                buf *array[u8]) bool {
  push(&path, '\0');
  wb0 array[u8] = make("wb\0");
  fp *FILE = fopen(data(&path), data(&wb0));
  if fp == null {
    return false;
  }

  nwrite size = fwrite(@[*void]cast(data(buf)), 1, count(buf), fp);
  if (0 != fclose(fp)) {
    return false;
  }
  if nwrite != count(buf) {
    return false;
  } else {
    return true;
  }
}
